{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "lib": [
      "es6",
      "es2017",
      "dom"
    ]
  },
  "outDir": "build",
  "exclude": [
    "node_modules",
    "src/**/__tests__",
    "src/**/__fixtures__"
  ]
}